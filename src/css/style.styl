@font-face 
  font-family: copperplate;
  src: url('../fonts/copperplate.ttf');
* {
    box-sizing: border-box;
}
body 
    position relative
    z-index -1
    scroll-behavior: smooth
    
html 
    overflow-x hidden
    scroll-behavior: smooth
a  
    color #010101
    text-decoration none





.main
    background #0101010
    width 100vw
    height 100vh
    display flex
    align-items flex-end
    position relative
    .scrollIndicator 
        height 80vh
        width 10vw
        display flex
        flex-direction column
        align-items center
        .homeScroll
            color #ffffff
            font-size 1.5em
            transform rotateZ(-90deg)
            font-family copperplate
            font-weight bold
        .bar_0
            display block
            width 0.1vw
            height 65vh
            background #ffffff
            margin-top 6vh
            transform-origin top
            transform scaleY(0)
    .mainContent
        display flex
        align-items center
        height 100vh
        color #ffffff
        font-family: 'Raleway', sans-serif
        font-size 2em
        line-height 1emZ
        .title
            line-height 1.2em
            font-size 1.5em
            .name
                color #F4E3CD
    .menuContainer 
        height 100vh
        width 25vw
        position absolute
        right 0
        display flex
        align-items center
        .menu
            width 100%
            font-family copperplate
            color #ffffff
            font-size 1.3em
            text-align center
            ul
                a
                    display block
                    text-decoration none;
                    color #ffffff
                    li 
                        display flex
                        align-items center
                        font-weight bold
                    li:not(.contact)
                        padding-bottom 7vh
                    li:not(.projectSpan)
                        display flex
                        justify-content flex-end
                        padding-right 1.5em
                    li::before
                        content ''
                        display block
                        background #ffffff
                        width 10vw
                        height 0.7vh
                        margin-right 1em
                        transform: scaleX(0)
                        transition transform 0.3s ease-in
                        // transform-origin right
                :hover
                    text-decoration: line-through;
                :hover li::before
                    transform: scaleX(1)
                

    .mouseContainer
        width 100vw
        height 20vh
        position absolute
        bottom 0
        display flex
        justify-content center
        align-items center
        .mouse
            background #ffffff
            width 2.5em
            height 4.5em
            border-radius 50px
            display flex
            justify-content center
            align-items center
            animation bounce 3s infinite !important
            .circleBlack
                border-radius 50%
                background #010101
                width 1em
                height 1em
                margin-bottom 60%
